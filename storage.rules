
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Verification Documents: Users can only read/write to their own folder.
    match /verification_documents/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Profile Pictures: Users can only read/write their own profile picture.
    match /profile_pictures/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Registration Photos: Any authenticated user can write, anyone can read.
    match /registration_photos/{allPaths=**} {
      allow write: if request.auth != null;
      allow read;
    }

    // Default catch-all to prevent any unauthorized access.
    match /{allPaths=**} {
      allow write: if false;
      allow read: if request.auth != null;
    }
  }
}

    