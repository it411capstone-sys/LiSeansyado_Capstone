
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data in the fisherfolk collection.
    // The {userId} wildcard ensures that a user can only access documents
    // where the document ID matches their own Firebase Authentication UID.
    match /fisherfolk/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // You would add rules for other collections here.
    // For example, for registrations:
    // match /registrations/{registrationId} {
    //   allow read, write: if request.auth != null; // Example: allow any authenticated user
    // }
  }
}
